                tekton-lint && \
    npm audit fix --audit-level=critical || true \
    && npm cache clean --force || true \
    && rm -rf /root/.npm/_cacache \
    && find . -name "*.d.ts" -delete \
    && find . -name "*.map" -delete \
    && find . -name "*.npmignore" -delete \
    && find . -name "*.travis.yml" -delete \
